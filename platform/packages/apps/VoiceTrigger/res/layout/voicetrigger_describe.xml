<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:spreadst="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- the first page enter user define trigger activity -->

    <LinearLayout
        android:id="@+id/voicetrigger_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/describe_view_default_margin_or_padding"
            android:text="@string/voicetrigger_describe"
            android:textSize="@dimen/voicetrigger_describe_text_size" />

        <ImageView
            android:id="@+id/voicetrigger_describe_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/describe_view_default_margin_or_padding"
            android:background="@drawable/describe_speech1"
            android:contentDescription="@string/voicetrigger_image_describe"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/voicetrigger_speeching"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/speech_background"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.23">

            <ImageView
                android:id="@+id/voicetrigger_speeching_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/voicetrigger_speeching_image_margin"
                android:background="@drawable/progress_bg_3_0"
                android:contentDescription="@string/voicetrigger_image_speeching" />

            <TextView
                android:id="@+id/trainFeedback"
                android:layout_width="298dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/voicetrigger_speeching_image"
                android:layout_alignStart="@+id/voicetrigger_speeching_image"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:maxLines="2"
                android:paddingLeft="@dimen/describe_view_default_margin_or_padding"
                android:paddingRight="@dimen/describe_view_default_margin_or_padding"
                android:paddingTop="@dimen/trainFeedback_padding_top"
                android:textColor="#ffffff"
                android:textSize="@dimen/trainFeedback_text_size" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/promptingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/describe_view_default_margin_or_padding"
                android:paddingRight="@dimen/describe_view_default_margin_or_padding"
                android:textSize="@dimen/default_text_size" />

            <com.sprd.voicetrigger.view.RippleView
                android:id="@+id/rippleview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ripple_view_height"
                android:layout_marginTop="@dimen/describe_view_default_margin_or_padding" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
