<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/memory_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="10dp" >

    <LinearLayout
        android:id="@+id/gs_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/manage_memory_29"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/gs_per_used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/gs_per_used"
            android:textColor="#08998c"
            android:layout_gravity="center|top"
            android:textSize="36sp" />

        <Button
            android:id="@+id/start_memory_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/start_memory_button"
            android:singleLine="true"
            android:layout_gravity="center|bottom"
            android:text="@string/start_memory_button"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <TextView
        android:id="@+id/can_rubbish_ram"
        android:layout_width="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:singleLine="false"
        android:text="@string/can_rubbish_ram"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>