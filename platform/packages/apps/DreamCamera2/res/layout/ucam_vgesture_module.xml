<?xml version="1.0" encoding="utf-8"?>
    <com.sprd.ucam.vgesutre.VgestureLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/vgesture_root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="invisible" >

    <com.android.camera.ui.RotateImageView
        android:id="@+id/camera_gesture_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/help_gesture_line" />
    <TextView
        android:id="@+id/camera_help_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="172dp"
        android:padding="20dp"
        android:gravity="center"
        android:visibility="invisible"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:text="@string/camera_gesture_help"
        android:background="@drawable/bg_information"/>
     <include layout="@layout/vgesture_title_layout" />

    </com.sprd.ucam.vgesutre.VgestureLayout>
