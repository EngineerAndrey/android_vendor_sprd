<com.android.camera.widget.FilmstripLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filmstrip_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible">

    <FrameLayout
        android:id="@+id/camera_filmstrip_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.android.camera.widget.FilmstripView
            android:id="@+id/filmstrip_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <include layout="@layout/filmstrip_bottom_controls" />

    <!-- SPRD: Fix bug 535110, Photo voice record. @{ -->
    <com.android.camera.ui.VoiceImageView
        android:id="@+id/photo_voice_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_voice"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onVoicePlayClicked"
        android:layout_gravity="center|bottom"
        android:visibility="invisible"
        android:layout_marginBottom="80dp"/>
    <!-- @} -->

</com.android.camera.widget.FilmstripLayout>
