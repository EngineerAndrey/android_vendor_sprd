<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140dp" >
        <!-- android:layout_marginBottom="@dimen/vgesture_image_margin_top" -->
        <com.android.camera.ui.RotateImageView
            android:id="@+id/camera_mode_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:background="@drawable/press_background"
            android:src="@drawable/information_off" />
        <com.android.camera.ui.RotateImageView
            android:id="@+id/camera_gesture_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:background="@drawable/press_background"
            android:src="@drawable/guideline_on"/>
    </RelativeLayout>

