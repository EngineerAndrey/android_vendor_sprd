<?xml version="1.0" encoding="utf-8"?>
<!-- Created By Spreadst -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_batch_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/fm_station_rds_margin_top_start"
        android:paddingRight="@dimen/fm_station_rds_margin_top_start"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_station_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:alpha="0.54"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="@string/fm_record_list"
            android:textColor="@color/black_color"
            android:textSize="@dimen/fm_primary_text_size" />

        <LinearLayout
            android:id="@+id/ck_selectAll_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.54"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="@string/select_all"
                android:textColor="@color/black_color"
                android:textSize="@dimen/fm_primary_text_size" />

            <CheckBox
                android:id="@+id/ck_selectAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/checkbox_hint_color"
                android:checked="false"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/fm_record_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null" >
    </ListView>

</LinearLayout>