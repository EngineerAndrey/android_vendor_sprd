<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_Favorite_Tag"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/fm_station_rds_margin_top_start"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:singleLine="true"
        android:text="@string/station_searching_tips"
        android:textColor="@color/fm_tag_color"
        android:textSize="13sp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/station_item_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fm_list_item_height"
        android:descendantFocusability="blocksDescendants" >

        <RelativeLayout
            android:id="@+id/list_item_right"
            android:layout_width="@dimen/fm_rl_imgbtn_touch_size"
            android:layout_height="@dimen/fm_list_item_height"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dip"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical" >

            <LinearLayout
                android:id="@+id/list_item_right_inner"
                android:layout_width="@dimen/fm_rl_imgbtn_touch_size"
                android:layout_height="@dimen/fm_rl_imgbtn_touch_size"
                android:background="@drawable/favorite_circle_button"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/lv_station_type"
                    android:layout_width="@dimen/fm_list_star_width"
                    android:layout_height="@dimen/fm_list_star_height"
                    android:contentDescription="@string/talk_add_favorite" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/list_item_left"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fm_list_item_height"
            android:layout_marginStart="@dimen/fm_station_list_margin_left"
            android:layout_marginEnd="@dimen/fm_list_name_margin_right"
            android:layout_toEndOf="@id/list_item_right"
            android:gravity="center_vertical" >

            <RelativeLayout
                android:id="@+id/list_item_left_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/lv_station_freq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.87"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/fm_primary_text_size" />

                <com.android.fmradio.views.FmVisualizerView
                    android:id="@+id/fm_play_indicator"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_marginStart="6dip"
                    android:layout_toEndOf="@+id/lv_station_freq"
                    android:alpha="0.54"
                    android:gravity="center_vertical"
                    android:visibility="invisible" />
                <TextView
                    android:id="@+id/lv_station_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dip"
                    android:layout_toEndOf="@+id/fm_play_indicator"
                    android:alpha="0.87"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/fm_primary_text_size" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/list_item_left_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_item_left_up"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/lv_station_rds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dip"
                    android:alpha="0.54"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/fm_rds_text_size"
                    android:visibility="visible" />
            </RelativeLayout>
        </RelativeLayout>
        <CheckBox
            android:id="@+id/ck_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/fm_station_rds_margin_top_start"
            android:buttonTint="@color/checkbox_hint_color"
            android:checked="false"
            android:clickable="false"
            android:focusable="false"
            android:visibility="gone" />

</RelativeLayout>

</LinearLayout>