<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:layout_marginBottom="15dp"
    android:background="#ffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/clear_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clear_title"
            android:textColor="#90C4EA"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/clear_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#656565"
            android:textSize="14sp" />

        <FrameLayout
            android:id="@+id/framelayout_arrow"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/clear_set_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/clear_set_tips"
                android:textColor="#787878"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:background="@drawable/arrow" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/clear_dlg_checkbox"
                style="@style/AppBaseTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/clear_no_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/clear_no_confirm"
                android:textColor="#6C6C6C"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/clear_dialog_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:text="@string/clear_confirm_btn"
            android:textColor="#8FB7B2"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>